openssl genrsa -out ca.key 2048

openssl req -x509 -new -key ca.key -sha256 -days 36500 -out ca.pem 

openssl genrsa -out server.key 2048

openssl req -new -sha256 -key server.key -out server.csr 
openssl x509 -req -days 36500 -sha256  -CA ca.pem -CAkey ca.key -CAcreateserial -in server.csr -out server.pem


openssl genrsa -out client.key 2048
openssl req -new -sha256 -key client.key -out client.csr 
openssl x509 -req -days 36500 -sha256  -CA ca.pem -CAkey ca.key -CAcreateserial -in client.csr -out client.pem